{
  "name": "@easycontabil/esc-question",
  "version": "1.0.0",
  "description": "",
  "repository": "https://github.com/easycontabil/ESC-Question",
  "author": "Jo√£o Lenon <lenonsec7@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"**/*.ts\" \"test/**/*.ts\"",
    "ts-node": "ts-node --transpile-only -r tsconfig-paths/register",
    "schema:drop": "yarn typeorm-mig schema:drop",
    "migration:run": "yarn typeorm-mig migration:run",
    "migration:revert": "yarn typeorm-mig migration:revert",
    "migration:refresh": "yarn schema:drop && yarn migration:run",
    "typeorm-mig": "yarn ts-node ./node_modules/.bin/typeorm --config database/ormconfig.ts",
    "typeorm-seed": "yarn ts-node ./node_modules/typeorm-seeding/dist/cli.js -r database -n ormconfig.ts",
    "start": "nest start",
    "start:prod": "node dist/start/main.js",
    "start:debug:prod": "DEBUG=api:* node dist/start/main.js",
    "start:dev": "nest start --watch",
    "start:debug:dev": "DEBUG=api:* nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{config,start,app,database,test,providers}/**/*.ts\" --fix",
    "test": "NODE_ENV=testing jest --verbose --setupFiles --runInBand --detectOpenHandles --testTimeout=10000",
    "test:watch": "NODE_ENV=testing jest --watch --setupFiles --runInBand --detectOpenHandles --testTimeout=10000",
    "test:cov": "NODE_ENV=testing jest --coverage --setupFiles --runInBand --detectOpenHandles --testTimeout=10000",
    "test:e2e": "NODE_ENV=testing jest --config ./test/jest-e2e.json --setupFiles --runInBand --detectOpenHandles --testTimeout=10000",
    "test:debug": "DEBUG=api:* NODE_ENV=testing jest --verbose --setupFiles --runInBand --detectOpenHandles --testTimeout=10000"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.7.13",
    "@secjs/core": "^1.6.3",
    "@secjs/env": "^1.0.5",
    "@types/node": "^13.9.1",
    "axios": "^0.21.0",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^3.4.1",
    "cache-manager-redis-store": "^2.0.0",
    "chalk": "^4.1.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "date-fns": "^2.17.0",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.2.6",
    "glob": "^7.1.6",
    "handlebars": "^4.7.7",
    "helmet": "^4.4.1",
    "joi": "^17.4.0",
    "joiful": "^3.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.6",
    "telegraf": "^4.3.0",
    "ts-node": "^8.6.2",
    "uuidv4": "^6.2.5"
  },
  "devDependencies": {
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/amqplib": "^0.5.17",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cache-manager": "^3.4.0",
    "@types/chalk": "^2.2.0",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/express-rate-limit": "^5.1.1",
    "@types/glob": "^7.1.3",
    "@types/jest": "25.2.3",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.14.168",
    "@types/moment": "^2.13.0",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.9",
    "jest": "26.0.1",
    "lint-staged": "^9.4.3",
    "luxon": "^1.25.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleDirectories": [
      "node_modules",
      "app",
      "config",
      "start",
      "database"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "dot-notation": "off",
      "camelcase": "off",
      "no-undef": "off",
      "@typescript-eslint/no-var-requires": "off",
      "no-useless-constructor": "off",
      "@typescript-eslint/no-useless-constructor": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/interface-name-prefix": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "_"
        }
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "semi": false
  }
}
